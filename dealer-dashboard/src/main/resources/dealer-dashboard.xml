<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <context:component-scan base-package="com.edmunds.track.inventory"/>
    <import resource="classpath:inventory-rest-client-spring.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>tracking.properties</value>
        </property>
    </bean>

    <bean id="speedLimitsService" class="com.edmunds.track.speed.SpeedLimitsService">
        <property name="apiKey" value="${googleApi.apiKey}" />
    </bean>

</beans>